@model IEnumerable<MakeupReview>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">REVIEWS</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="MakeupReview" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Add a new Review
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="text-nowrap" style="width: 20%;">Product Name</th>
                        <th class="text-nowrap" style="width: 20%;">Client Name</th>
                        <th class="text-nowrap" style="width: 30%;">Review</th>
                        <th class="text-nowrap" style="width: 10%;">Rating</th>
                        <th class="text-nowrap" style="width: 10%;">Date</th>
                        <th class="text-nowrap" style="width: 10%;"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td class="text-nowrap">@obj.MakeupProduct.Name</td>
                            <td class="text-nowrap">@obj.ClientName</td>
                            <td>@obj.Review</td>
                            <td class="text-nowrap">@obj.Rating</td>
                            <td class="text-nowrap">@obj.ReviewDate.ToShortDateString()</td>    <!-- para incluir apenas dia, mes e ano-->
                            <td class="text-nowrap">
                                <div class="btn-group" role="group">
                                    <a asp-action="Update" asp-route-makeupReviewId="@obj.Id" class="btn btn-success mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-makeupReviewId="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
